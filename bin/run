#!/bin/bash
pushd . > /dev/null
SCRIPT_PATH=${BASH_SOURCE[0]}
if [[ -h "${SCRIPT_PATH}" ]]; then
  while [[ -h "${SCRIPT_PATH}" ]]; do cd "$(dirname "$SCRIPT_PATH")" || exit;
  SCRIPT_PATH=$(readlink "${SCRIPT_PATH}"); done
fi
cd "$(dirname "${SCRIPT_PATH}")" > /dev/null || exit
SCRIPT_PATH=$(pwd);
popd  > /dev/null || exit

node --experimental-repl-await "${SCRIPT_PATH}"/run.js "$@"
